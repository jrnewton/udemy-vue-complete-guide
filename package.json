{
  "name": "udemy-vue-complete-guide",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "ws -d ./src/",
    "test": "echo \"No tests defined!\" && exit 1"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "local-web-server": "^4.2.1",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "env": {
      "es2018": true,
      "mocha": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:vue/vue3-recommended"
    ],
    "plugins": [
      "prettier",
      "vue"
    ],
    "rules": {
      "strict": "error",
      "semi": "error",
      "prettier/prettier": "error"
    },
    "ignorePatterns": [
      "node_modules/",
      "types/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "quoteProps": "consistent"
  }
}